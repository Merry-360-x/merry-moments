{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!assets/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/review?action=send-emails",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/hotel-calendar-sync?action=sync-all",
      "schedule": "*/30 * * * *"
    }
  ]
}

