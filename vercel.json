{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!assets/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/send-review-emails",
      "schedule": "0 10 * * *"
    }
  ]
}

